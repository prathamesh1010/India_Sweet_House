{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    { "source": "/api/health", "destination": "/api/health.py" },
    { "source": "/api/process-file", "destination": "/api/process-file.py" },
    { "source": "/api/interest-analysis", "destination": "/api/interest-analysis.py" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ],
  "env": {
    "PYTHONPATH": "/var/task"
  }
}
