{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/process-file.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/health.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/interest-analysis.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    {
      "source": "/api/process-file",
      "destination": "/api/process-file.py"
    },
    {
      "source": "/api/health", 
      "destination": "/api/health.py"
    },
    {
      "source": "/api/interest-analysis",
      "destination": "/api/interest-analysis.py"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ]
}
